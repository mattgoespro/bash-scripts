{
  "[shellcheckrc]": {
    "editor.defaultFormatter": "mads-hartmann.bash-ide-vscode",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "[shellscript]": {
    "editor.defaultFormatter": "mads-hartmann.bash-ide-vscode",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "bashIde.backgroundAnalysisMaxFiles": 50000,
  "bashIde.globPattern": "**/*.sh",
  "bashIde.shellcheckPath": "",
  "editor.codeActionsOnSave": {
    "source.fixAll.shellcheck": "always"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "files.eol": "\n",
  "shellcheck.customArgs": ["--external-sources", "scripts"],
  "shellcheck.logLevel": "trace",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "workbench.colorTheme": "Syntax Material Dark"
}
