{
  "[shellcheckrc]": {
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.shellcheck": "always"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "files.eol": "\n",
  "gitProjectManager.baseProjectsFolders": ["%USERPROFILE%\\Desktop\\Code"],
  "gitProjectManager.openInNewWindow": true,
  "shellcheck.customArgs": ["--rcfile", ".shellcheckrc"],
  "shellcheck.enable": true,
  "shellcheck.logLevel": "info",
  "shellcheck.run": "onType",
  "shellcheck.useWorkspaceRootAsCwd": true,
  "workbench.colorTheme": "Material Syntax - Dark"
}
