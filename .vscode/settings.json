{
  "[shellcheckrc]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "bashIde.backgroundAnalysisMaxFiles": 50000,
  "bashIde.globPattern": "**/*.sh",
  "bashIde.shellcheckPath": "",
  "editor.codeActionsOnSave": {
    "source.fixAll.shellcheck": "always"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "files.eol": "\n",
  "gitProjectManager.baseProjectsFolders": ["%USERPROFILE%\\Desktop\\Code"],
  "gitProjectManager.openInNewWindow": true,
  "terminal.integrated.defaultProfile.windows": "git-bash",
  "terminal.integrated.profiles.windows": {
    "git-bash": {
      "path": "C:\\Program Files\\Git\\bin\\bash.exe",
      "args": ["-l"],
      "icon": "terminal-bash",
      "env": {
        "PATH": "${env:PATH}"
      }
    }
  },
  "shellcheck.logLevel": "trace",
  "workbench.colorTheme": "Material Syntax - Dark"
}
